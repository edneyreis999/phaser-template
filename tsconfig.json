{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
